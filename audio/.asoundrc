pcm.mslx_playback {
  type dmix
  ipc_key 1001
  slave {
    pcm {
      type hw
      card LX3000
      device 0
    }
    buffer_size 4096
  }
}

pcm.mslx_capture {
  type dsnoop
  ipc_key 1002
  slave {
    pcm {
      type hw
      card LX3000
      device 0
    }
  }
}

pcm.asymed {
  type asym
  playback.pcm "mslx_playback"
  capture.pcm "mslx_capture"
}

pcm.!default {  
  type plug 
  slave {
    pcm 'plug:asymed'
  }  
}

ctl.!default {
  type hw 
  card LX3000
}

